<div class="well">
	<!-- WHERE is @comment set? -->
	<!-- how do we make submit perform the proper path to the comments creation? -->
	<h5>Create a comment:</h5>
	<%= form_for [@post, @comment] do |f| %>
		<% if @comment.errors.any? %>
			<%= render "shared/errors_display", errors_set: @comment.errors %>
		<% end %>
		<div class="control-group">
			<%= f.text_area :body, rows: 5 %>
		</div>

		<%= f.submit "Add Comment", class: "btn btn-primary" %>
	<% end %>
</div>

<p>
<%= render @post.categories %>
</p>

<%= render "shared/content_title", title_var: @post.title %>

<p>
	<%= @post.description %>
</p>
<hr/>


<hr/>


<h4><%= "Post details for post " + '#' + "#{@post.id}" %></h4>

<style>
	#table, th, td {
			padding: 15px;
			border: 1px solid green;
	}

	#cellcoll {
		background-color: lightblue;
	}

	#errstyle {
		color: red;
	}
</style>

<table>
	<tr>
		<th>Field</th>
		<th>Value</th>
	</tr>
	<tr>
		<td id="cellcoll">Posted by</td>
		<% if @post.creator %>
			<td><%= @post.creator.username %></td>
		<% else %>
			<td id="errstyle">No one posted this!</td>
		<% end %>
	</tr>
	<tr>
		<td id="cellcoll">URL</td>
		<td><%= @post.url %></td>
	</tr>
	<tr>
		<td id="cellcoll">Title</td>
		<td><%= @post.title %></td>
	</tr>
	<tr>
		<td id="cellcoll">Description</td>
		<td><%= @post.description %></td>
	</tr>
</table>

