<!-- here we can create a button to edit the post -->

<pre><code>
	def set_post
		begin
			@post = Post.find(params[:id])
		rescue ActiveRecord::RecordNotFound
			@post = nil
			flash[:notice] = "There is no post with ID #{params[:id]}.  Showing all posts instead."
		end
	end
</code></pre>

<p class="pull-right">
	[<%= link_to "Edit Post", edit_post_path(@post)  %>]
</p>

<p>
<%= render @post.categories %>
</p>

<%= render "shared/content_title", title_var: @post.title %>

<p>
	<%= @post.description %>
</p>
<hr/>


<hr/>


<h4><%= "Post details for post " + '#' + "#{@post.id}" %></h4>

<style>
	#table, th, td {
			padding: 15px;
			border: 1px solid green;
	}

	#cellcoll {
		background-color: lightblue;
	}

	#errstyle {
		color: red;
	}
</style>

<table>
	<tr>
		<th>Field</th>
		<th>Value</th>
	</tr>
	<tr>
		<td id="cellcoll">Posted by</td>
		<% if @post.creator %>
			<td><%= @post.creator.username %></td>
		<% else %>
			<td id="errstyle">No one posted this!</td>
		<% end %>
	</tr>
	<tr>
		<td id="cellcoll">URL</td>
		<td><%= @post.url %></td>
	</tr>
	<tr>
		<td id="cellcoll">Title</td>
		<td><%= @post.title %></td>
	</tr>
	<tr>
		<td id="cellcoll">Description</td>
		<td><%= @post.description %></td>
	</tr>
</table>

