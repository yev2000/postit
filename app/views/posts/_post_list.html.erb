<% if post_list %>
	<% post_list.each do |p| %>
		<div class="row">

			<div class="span0 well text-center">
				<%= link_to vote_post_path(p, vote: true), method: "post" do %>
					<i class="icon-arrow-up"></i>
				<% end %>
				<br/>
				<% vote_str = "vote".pluralize(total_vote_count(p)) %>
				<small>
				<%= "#{total_vote_score(p)} [from #{total_vote_count(p)} #{vote_str}]" %>
				</small>
				<br/>
				<%= link_to vote_post_path(p, vote: false), method: "post" do %>
					<i class="icon-arrow-down"></i>
				<% end %>
			</div>

			<div class="span8 well">
				<%= render p.categories %>

				<h4><%= link_to p.title, fix_url(p.url) %></h4>
				<p><%= p.description %></p>
				<p>
					<%= render "shared/poster_meta", {var_by: "posted by", var_obj: p} %>
					<small>
						<span>
							<%= link_to("#{p.comments.size} " + "comment".pluralize(p.comments.size), post_path(p)) %>
						</span>

						<!-- only show the edit post link as available if -->
						<!-- the logged in user is the creator of the post -->
						<!-- otherwise, the user does not have privileges to edit the post -->
						<!-- In the future, if we have the concept of a superuser or admin -->
						<!-- perhaps we can give them the right to edit anyone's post. -->
						<% if current_user_get == p.creator %>
							<span>
								<div style="padding: 0px;">
									<i class="icon-edit"></i>
									<%= link_to "Edit Post", edit_post_path(p) %>
								</div>
							</span>
						<% end %>

					</small>
				</p>
			</div>
		</div>
	<% end %>
<% end %>
