<% if post_list %>
	<% post_list.each do |p| %>
		<div class="row">
			<div class="span8 well">
				<%= render p.categories %>
				
				<h4><%= link_to p.title, fix_url(p.url) %></h4>
				<p><%= p.description %></p>
				<p>
					<%= render "shared/poster_meta", {var_by: "posted by", var_obj: p} %>
					<small>
						<span>
							<%= link_to("#{p.comments.size} comments", post_path(p)) %>
						</span>
							
						<span>
							<div style="padding: 10px;">
								<%= link_to "Edit Post", edit_post_path(p) %>
							</div>
						</span>
					</small>
				</p>
			</div>
		</div>
	<% end %>
<% end %>
