<%= render "shared/content_title", title_var: "Listing of Posts" %>

<% @posts.each do |p| %>
	<div class="row">
		<div class="span8 well">
			<%= render p.categories %>
			
			<h4><%= link_to p.title, p.url %></h4>
			<p><%= p.description %></p>
			<p>
				<span class='quiet'>posted by</span>
				<%= p.creator ? p.creator.username : "*** NONE ***" %>
				<small>at <%= p.created_at %>
					<span>
						<%= link_to("#{p.comments.size} comments", post_path(p)) %>
					</span>
					
					<span>
						<div style="padding: 10px;">
							<%= link_to "Edit Post", edit_post_path(p) %>
						</div>
					</span>
				</small>
			</p>
		</div>
	</div>
<% end %>



