<%= render "shared/content_title", title_var: @top_title %>

<% create_button_string = @post.new_record? ? "Create Post" : "Update Post" %>

<%= render "shared/errors_display", errors_set: @post.errors %>

<div class="well">

	<%= form_for @post do |f| %>
		<div class="control-group">
			<%= f.label :title %>
			<%= f.text_field :title %>
		</div>
		<div class="control-group">
			<%= f.label :url %>
			<%= f.text_field :url %>
		</div>
		<div class="control-group">
			<%= f.label :description %>
			<%= f.text_area :description, rows: 5 %>
		</div>

		<%= f.submit create_button_string || "Submit", 
			class: "btn btn-primary" %>
	<% end %>

</div>
