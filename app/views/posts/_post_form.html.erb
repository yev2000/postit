<%= render "shared/content_title", title_var: @edit_title %>

<!-- display error messages -->
<% if @post.errors.any? %>
<div class="row">
	<div class="alert alert-error span8">
		<h5>There were some errors; please fix them</h5>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
</div>
<% end %>

<div class="well">

	<%= form_for @post do |f| %>
		<div class="control-group">
			<%= f.label :title %>
			<%= f.text_field :title %>
		</div>
		<div class="control-group">
			<%= f.label :url %>
			<%= f.text_field :url %>
		</div>
		<div class="control-group">
			<%= f.label :description %>
			<%= f.text_area :description, rows: 5 %>
		</div>

		<%= f.submit @create_button_string || "Submit", 
			class: "btn btn-primary" %>
	<% end %>

</div>
