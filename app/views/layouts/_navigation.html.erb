<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
  <li>
    <%= link_to 'link', '' %>
  </li>
</ul>
<div class="btn-group nav_item">
	<%= link_to "#", class: "btn btn-small dropdown-toggle", "data-toggle" => "dropdown" do %>
		Categories <span class="caret"></span>
	<% end %>
	<ul class="dropdown-menu">
		<% Category.all.each do |cat| %>
		<li>
			<%= link_to cat.name, category_path(cat) %>
		</li>
		<% end %>
		<li class="divider"></li>
		<li>
			<%= link_to(new_category_path) do %>
				<!-- whatever is in this block is what is actually displayed for that link -->
				<i class="icon-plus"></i>
				New Category
			<% end %>
		</li>
	</ul>
</div>
<div class="nav-item">
  <%= link_to "Create New Post", new_post_path, class: "btn btn-success btn-small" %>
  <%= link_to "Search Users", search_users_path, class: "btn btn-small" %>
  <%= link_to "Search Posts", search_posts_path, class: "btn btn-small" %>
  <%= link_to "Create User", new_user_path, class: "btn btn-small" %>
</div>
