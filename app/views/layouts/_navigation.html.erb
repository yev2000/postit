<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
</ul>

<div class="btn-group nav_item">
	<%= link_to "#", class: "btn btn-small dropdown-toggle", "data-toggle" => "dropdown" do %>
		Categories <span class="caret"></span>
	<% end %>
	<ul class="dropdown-menu">
		<% Category.all.each do |cat| %>
			<li>
				<%= link_to cat.name, category_path(cat) %>
			</li>
		<% end %>
		<li class="divider"></li>
		<li>
			<%= link_to(new_category_path) do %>
				<!-- whatever is in this block is what is actually displayed for that link -->
				<i class="icon-plus"></i>
				New Category
			<% end %>
		</li>
	</ul>
</div>

<div class="nav_item">
  <%= link_to "Create New Post", new_post_path, class: "btn btn-success btn-small" %>
</div>


<div class="btn-group nav_item">
	<%= link_to "#", class: "btn btn-small dropdown-toggle", "data-toggle" => "dropdown" do %>
		<i class="icon-search"></i>
		&nbsp;Search&nbsp;&nbsp;<span class="caret"></span>
	<% end %>

	<ul class="dropdown-menu">
		<li>
		  <%= link_to(search_users_path) do %>
		  	<i class="icon-user"></i>
		  	Search Users
		  <% end %>
		</li>
		<li>
		  <%= link_to(search_posts_path) do %>
			  <i class="icon-inbox"></i>
			  Search Posts
		  <% end %>
		</li>
	</ul>
</div>

<% if logged_in? %>
	<div class="btn-group nav_item">
		<%= link_to "#", class: "btn btn-small dropdown-toggle", "data-toggle" => "dropdown" do %>
			<%= ("&nbsp;" + current_user_get.username + "&nbsp;&nbsp;").html_safe %><span class="caret"></span>
		<% end %>

		<ul class="dropdown-menu">
			<li>
				<%= link_to(edit_user_path(get_logged_in_user_id)) do %>
					<i class='icon-pencil'></i>
					Edit  Profile
				<% end %>
			</li>
			<li>
				<%= link_to(user_path(get_logged_in_user_id)) do %>
					<i class='icon-user'></i>
					View Profile
				<% end %>
			</li>
			<li>
				<%= link_to(logout_path) do %>
					<i class='icon-circle-arrow-left'></i>
					Logout
				<% end %>
			</li>
		</ul>
	</div>
<% else %>
	<div class="nav_item">
  	<%= link_to "Register", register_path, class: "btn btn-small" %>
	</div>
	<div class="nav_item">
  	<%= link_to "Sign In", login_path, class: "btn btn-success btn-small" %>
	</div>
<% end %>
