<% show_post_link ||= false %>

<% if comments_list && comments_list.size > 0 %>
	<h5>Comments:</h5>
	<% comments_list.sort_by{|x| total_vote_score(x)}.reverse.each do |c| %>
		<div class="row">
			<%= render "shared/vote_controls",
				{
					obj_var: c,
					url_up_var: vote_post_comment_path(c.post, c, vote: true), 
					url_down_var: vote_post_comment_path(c.post, c, vote: false)
				} %>

			<div class="well span8">
				<i class="icon-comment"></i>
				<em>"<%= c.body %>"</em>
				<% if show_post_link %>
					on
					<%= link_to c.post.title, post_path(c.post.id) %>
				<% end %>
				<br/>
				<%= render "shared/poster_meta", {var_by: "by", var_obj: c} %>
			</div>
		</div>
	<% end %>
<% end %>
