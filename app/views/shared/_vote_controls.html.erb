<!-- takes in three variables: -->
<!-- url_up_var which is the function/helper to generate the right URL  for up vote -->
<!-- url_down_var which is the function/helper to generate the right URL for down vote -->
<!-- and obj_var which is the object for which the voting is being performed -->
<% if total_vote_score(obj_var) > 0 %>
  <% box_color = '#CCFF99' %>
<% elsif total_vote_score(obj_var) < 0 %>
  <% box_color = '#FF99FF' %>
<% else %>
  <% box_color = '#E6E6FA' %>
<% end %>

<%= "<div class=\"span2 well text-center\" style=\"background-color: #{box_color};\">".html_safe %>
  <% if current_user_get %>
    <%= link_to url_up_var, method: "post" do %>
      <i class="icon-arrow-up"></i>
    <% end %>
    
  <% end %>
  <% vote_str = "vote".pluralize(total_vote_count(obj_var)) %>
  <div style="font-size: 18px;">
    <strong>
      <%= "#{total_vote_score(obj_var)}" %>
    </strong>
    <span class='quiet' style="font-size: 12px;">
      <em><%= "from #{total_vote_count(obj_var)} #{vote_str}" %></em>
    </span>
  </div>
  <% if current_user_get %>
    
    <%= link_to url_down_var, method: "post" do %>
      <i class="icon-arrow-down"></i>
    <% end %>
  <% end %>
</div>
