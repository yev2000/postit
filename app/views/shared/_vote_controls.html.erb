<!-- takes in three variables: -->
<!-- url_up_var which is the function/helper to generate the right URL  for up vote -->
<!-- url_down_var which is the function/helper to generate the right URL for down vote -->
<!-- and obj_var which is the object for which the voting is being performed -->
<% if total_vote_score(obj_var) > 0 %>
  <% box_color = positive_voted_entry_color() %>
<% elsif total_vote_score(obj_var) < 0 %>
  <% box_color = negative_voted_entry_color() %>
<% else %>
  <% box_color = neutral_voted_entry_color() %>
<% end %>

<%= "<div id=\"#{obj_prefix_str_var}_votes_box\" vote_score=\"#{total_vote_score(obj_var)}\" class=\"span2 well text-center\" style=\"background-color: #{box_color};\">".html_safe %>
  <% if current_user_get %>
    <%= link_to url_up_var, method: "post", remote: true do %>
      <i class="icon-arrow-up"></i>
    <% end %>
    
  <% end %>
  
  <div style="font-size: 18px;">
    <strong>
      <span id="<%= obj_prefix_str_var %>_votes">
        <%= "#{total_vote_score(obj_var)}" %>
      </span>
    </strong>
    <span class='quiet' style="font-size: 12px;">
      <em>from&nbsp;<span id="<%= obj_prefix_str_var %>_votes_total"><%= "#{total_vote_count_string(obj_var)}"%></span></em>
    </span>
  </div>
  <% if current_user_get %>
    
    <%= link_to url_down_var, method: "post", remote: true do %>
      <i class="icon-arrow-down"></i>
    <% end %>
  <% end %>
</div>
